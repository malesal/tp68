#include <iostream>
#include <string>
using namespace std;

string InsertarPunto(const string & frase);

int main() {
    string cadena;
    char caracter;

    cout << "Ingrese una cadena: ";
    getline(cin, cadena);

    cout << "Ingrese un carÃ¡cter: ";
    cin >> caracter;

    string resultado = InsertarPunto(cadena);

    cout << "Resultado: " << resultado << endl;

    return 0;
}
string InsertarPunto(const string& frase) {
    string resultado;
    int contador = 0;

    for (char c : frase) {
        if (contador == 3) {
            resultado += '.';
            contador = 0;
        }
        
        resultado += c;
        contador++;
    }

    return resultado;
}
